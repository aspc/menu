html, body { margin: 0; padding: 0; }

body {
	color: #333;
	font-family: Georgia, sans-serif;
	background: url(/images/stripe.png) repeat-x;
}

#logo {
	position: absolute;
	top: 0;
	right: 0;
}

#header {
	/*background: rgb(223,223,213);*/
	text-align: center;
}

#header h1 {
	font-weight: bold;
	font-size: 1.8em;
	padding: 0.2em;
	margin: 0;
	
	position: relative;
	z-index: 6;
}

#subheader {
	/*background: rgb(243,243,233);*/
	text-align: center;
	font-size: 0.9em;
	padding: 0.2em;
	padding-bottom: 0;
}

p {
	margin-bottom: 10px;
	margin-top: 10px;
	
	position: relative;
	z-index: 6;
}

iframe {
	position: relative;
	z-index: 6;
}

#main {
	padding: 10px;
}

#main > h1 {
	font-family: Garamond;
	font-size: 1.5em;
	margin: 0;
}

#main a {
	color: #006599;
	text-decoration: underline;
}

#main a.anchor {
	color: #333;
	clear: both;
	text-align: center;
	text-decoration: none;
}
#main a.anchor:hover { color: #333; }

#main > h1 {
	text-align: center;
	display: block;
	clear: both;
}

.menu {
	float: left;
	width: 16.66666%;
}

.menu h1 {
	font-size: 1.4em;
	margin: 0;
	font-family: Garamond;
}

#main .menu h1 a {
	font-weight: 400;
}

.hours {
	font-size: 12px;
	font-variant: small-caps;
}

ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

.menu > ul {
	margin-top: 5px;
	margin-right: 5px;
	font-size: 12px;
	line-height: 17px;
	font-family: verdana, arial, helvetica;
}

.menu li > ul > li {
	margin-left: 10px; text-indent: -10px;
}

#logo { z-index: 5; }
