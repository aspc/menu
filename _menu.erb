<h1>
	<a href="<%= @source.uri(@meal) %>">
		<%= @source.name %>
	</a>
	<img src="http://upload.wikimedia.org/wikipedia/commons/6/64/Icon_External_Link.png">
</h1>

<div class="hours">
	<%= @source.hours(@meal) %>
</div>

<ul>
	<% @source.menu(@meal).each do |group| %>
		<li>
			<strong><%= group.header %></strong>
			<ul>
			<% group.items.each do |item| %>
				<li><%= item %></li>
			<% end %>
			</ul>
		</li>
	<% end %>
	<% if @source.menu(@meal).empty? %>
		<li>
			<ul>
				<li>
				No information available at this time. Try checking back later.
				</li>
			</ul>
		</li>
	<% end %>
</ul>
